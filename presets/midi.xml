<!-- default MIDI bindings for Toonloop -->
<midi>
    <!-- Grab frame  -->
    <control_on  control="64" action="video_record_on" />
    
    <!-- Video grab -->
    <control_on  control="80" action="video_record_on" />
    <control_off control="80" action="video_record_off" />
    
    <!-- Notes [60,69]: select_clip -->
    <note_on note="60" action="select_clip" args="0" />
    <note_on note="61" action="select_clip" args="1" />
    <note_on note="62" action="select_clip" args="2" />
    <note_on note="63" action="select_clip" args="3" />
    <note_on note="64" action="select_clip" args="4" />
    <note_on note="65" action="select_clip" args="5" />
    <note_on note="66" action="select_clip" args="6" />
    <note_on note="67" action="select_clip" args="7" />
    <note_on note="68" action="select_clip" args="8" />
    <note_on note="69" action="select_clip" args="9" />

    <!-- Program change: select_clip -->
    <control_pass  control="80" action="select_clip" />

    <!-- Saturation (7 is main volume) -->
    <control_map control="7" action="fx_brcosa" from="0" to="1" />
    
    <!-- Note 72: reset current clip -->
    <note_on note="72" action="reset" />
</midi>

